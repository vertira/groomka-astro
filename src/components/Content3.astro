---
import Motion from './Motion.tsx'
import { CarouselDogs } from './CarouselDogs';
import LazyLottie from './LazyLottie';
---
    <section class="flex flex-col max-w-full min-h-screen lg:mt-0 lg:mx-30 lg:items-center justify-between mx-10">
      <div class="flex flex-col cursor-pointer mt-24 max-w-screen relative overflow-visible" id="toggle-container">
        <div class="absolute w-full h-full overflow-hidden">
        </div>
      </div>
      
      <Motion className="flex flex-col lg:container lg:mt-0 lg:w-full lg:mx-10 transition duration-[1500ms] ease-in-out" client:visible scale={0} duration={0}>
        <div class="flex flex-col gap-5 py-1.5 text-pink-600 uppercase tracking-[6px]">
          <div class="flex gap-4"><div class="shrink-0 my-auto h-0.5 bg-pink-600  w-[72px]" />
            <h2 class="font-accent text-4xl md:text-6xl lg:text-8xl">
              Galeria
            </h2></div>
          <p class="text-slate-900 max-md:text-center font-bold">Galeria Naszych Szczęśliwych Pupili: Zobacz Efekty Profesjonalnego Groomingu</p>
        </div>
      </Motion>
      <CarouselDogs client:visible/>
      <LazyLottie src="/lottie/swipe.lottie" styles="h-40 -mt-32 z-10" client:idle/>
    </section>